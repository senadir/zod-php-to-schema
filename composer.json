{
    "name": "nadir/zod-php-to-schema",
    "description": "Convert Zod-like PHP objects to JSON Schema definitions",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nadir\\Zod2Schema\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nadir\\Zod2Schema\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.11",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
